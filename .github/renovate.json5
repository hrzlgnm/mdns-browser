{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    automergeType: 'pr',
    patch: {
        automerge: true,
    },
    minor: {
        automerge: true,
    },
    extends: [
        'config:best-practices',
        ':dependencyDashboard',
        ':enableVulnerabilityAlerts',
        ':rebaseStalePrs',
        ':semanticCommits',
        ':semanticPrefixChore',
        ':separateMajorReleases',
        ':prImmediately',
    ],
    prConcurrentLimit: 0,
    lockFileMaintenance: {
        enabled: true,
    },
    customManagers: [
        {
            matchStringsStrategy: 'any',
            customType: 'regex',
            fileMatch: [
                '^\\.github/workflows/.*\\.yml$',
            ],
            matchStrings: [
                'crate:\\s*(?<depName>[^\\s]+)\\s*version:\\s*(?<currentValue>[^\\s]+)',
            ],
            depTypeTemplate: 'build-dependencies',
            datasourceTemplate: 'crate',
            versioningTemplate: 'semver',
        },
        {
            customType: 'regex',
            fileMatch: [
                'xbps-template/srcpkgs/template',
            ],
            matchStrings: [
                'cargo --locked install (?<depName>[a-zA-Z0-9-_]+)@(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)',
            ],
            datasourceTemplate: 'crates',
            versioningTemplate: 'semver',
        },
    ],
}
